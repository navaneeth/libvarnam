language_code "ml"
identifier "ml-inscript"
display_name "Malayalam Inscript"
author "Navaneeth KN"

infer_dead_consonants false

$zwnj = "\u{200c}"
$zwj = "\u{200d}"


word_breakers "." => ".",
	      "," => ",",
	      "?" => "?",
	      "!" => "!",
	      "(" => "(",
	      ")" => ")"
	      
vowels "D" => "അ",
       "E" => "ആ",
       "F" => "ഇ",
       "R" => "ഈ",
       "G" => "ഉ",
       "T" => "ഊ",
       "+" => "ഋ",
       "Z" => "എ",
       "S" => "ഏ",
       "W" => "ഐ",
       "~" => "ഒ",
       "A" => "ഓ",
       "Q" => "ഔ",
       "q" => ["ൌ", "ൌ"],
       "w" => ["ൈ", "ൈ"],
       "e" => ["ാ", "ാ"],
       "r" => ["ീ", "ീ"],
       "t" => ["ൂ", "ൂ"],
       "a" => ["ോ", "ോ"],
       "s" => ["േ", "േ"],
       "d" => ["്", "്"],
       "f" => ["ി", "ി"],
       "g" => ["ു", "ു"],
       "`" => ["ൊ", "ൊ"],
       "z" => ["െ", "െ"],
       "x" => ["ം", "ം"]

consonants "k" => "ക",
           "K" => "ഖ",
           "i" => "ഗ",
           "I" => "ഘ",
           "U" => "ങ",
           ";" => "ച",
           ":" => "ഛ",
           "p" => "ജ",
           "P" => "ഝ",
           "}" => "ഞ",
           "'"  => "ട",
           "\"" => "ഠ",
           "[" => "ഡ",
           "{" => "ഢ",
           "C" => "ണ",
           "L" => "ഥ",
           "l" => "ത",
           "O" => "ധ",
           "o" => "ദ",
           "v" => "ന",
           "h" => "പ",
           "H" => "ഫ",
           "y" => "ബ",
           "Y" => "ഭ",
           "c" => "മ",
           "/" => "യ",
           "j" => "ര",
           "n" => "ല",
           "b" => "വ",
           "M" => "ശ",
           "<" => "ഷ",
           "m" => "സ",
           "u" => "ഹ",
           "N" => "ള",
           "B" => "ഴ",
           "J" => "റ",
           "#" => "്ര",
           "&" => "ക്ഷ",
           "=" => "ൃ"

numbers "1" => "൧",
        "2" => "൨",
        "3" => "൩",
        "4" => "൪",
        "5" => "൫",
        "6" => "൬",
        "7" => "൭",
        "8" => "൮",
        "9" => "൯",
        "0" => "൦"

symbols "_" => "ഃ"

others "]" => $zwj,
       "\\" => $zwnj



#((G-4) "₹")
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
